<Window x:Class="学生学籍管理系统.ModifyPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="修改密码" Height="420" Width="300" WindowStyle="ToolWindow" SnapsToDevicePixels="True" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock FontSize="14" Text="请输入原密码:" Margin="35,80,157,277" />
        <PasswordBox x:Name="password" Margin="140,80,50,277"/>
        <TextBlock FontSize="14" Text="请输入新密码:" Margin="35,150,157,212" />
        <PasswordBox x:Name="newpassword" Margin="140,142,50,212"/>
        <TextBlock FontSize="14" Text="请再输入密码:" Margin="35,217,159,150" />
        <PasswordBox x:Name="newpassword1" Margin="140,215,50,142"/>
        <Button x:Name="yes" Content="确     定" FontSize="18" Margin="50,280,50,56" Click="yes_Click" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
    </Grid>
</Window>
